template(name="chatterbox")
	.chatterbox
		.user-list
			| {{> userList}}
		.conversations
			| {{> conversations}}

template(name="userList")
	h4 All users
		.all-users
			each users
				.user-unit
					a {{username}}
					span.online-status {{onlineStatus}}


template(name="conversations")
	each conversations
		| {{> conversation}}

template(name="conversation")
	.conversation
		p Test convo
		each messages
			| {{> message}}

