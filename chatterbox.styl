.chatterbox
	position fixed
	width 100%
	height 100%
	top 0
	left 0
	z-index 10000
	.user-list
		width 300px
		height 500px
		position absolute
		right 0
		bottom 0
		background #f3f3f3
		border-left 1px solid #ddd
		border-top 1px solid #ddd

		h4
			padding 0.7em 1em
			margin 0
			border-bottom 1px solid #ddd
	.user-unit
		padding 1em 0 0 1em
	.conversations
		position absolute 
		bottom 0
		.conversation
			margin 0 10px
			height 300px
			width 200px
			background #e3e3e3
			display inline-block
a
	cursor pointer

